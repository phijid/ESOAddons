<Bindings>
	<Layer name="SI_KEYBINDINGS_LAYER_GENERAL">
		<Category name="CombatMetrics">
			<Action name="CMX_REPORT_TOGGLE">
				<Up>CombatMetrics_Report:Toggle()</Up>
			</Action>
			<Action name="CMX_POST_DPS">
				<Up>CMX.PosttoChat(CMX_POSTTOCHAT_MODE_SINGLEANDMULTI)</Up>
			</Action>
			<Action name="CMX_POST_DPS_SMART">
				<Up>CMX.PosttoChat(CMX_POSTTOCHAT_MODE_SMART)</Up>
			</Action>
			<Action name="CMX_POST_DPS_SINGLE">
				<Up>CMX.PosttoChat(CMX_POSTTOCHAT_MODE_SINGLE)</Up>
			</Action>
			<Action name="CMX_POST_DPS_MULTI">
				<Up>CMX.PosttoChat(CMX_POSTTOCHAT_MODE_MULTI)</Up>
			</Action>
			<Action name="CMX_POST_HPS">
				<Up>CMX.PosttoChat(CMX_POSTTOCHAT_MODE_HEALING)</Up>
			</Action>
			<Action name="CMX_RESET_FIGHT">
				<Up>CMX.ResetFight()</Up>
			</Action>
			<Action name="CMX_LIVEREPORT_TOGGLE">
				<Up>CombatMetrics_LiveReport:Toggle()</Up>
			</Action>
		</Category>
	</Layer>
</Bindings>
